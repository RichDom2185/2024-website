---
type Props = {
  date: Date;
  withDay?: boolean;
};
const { date, withDay = false } = Astro.props;
---

<time datetime={date.toISOString()}
  >{
    date.toLocaleDateString('en-UK', {
      ...(withDay && { weekday: 'long' }),
      day: 'numeric',
      month: 'short',
      year: 'numeric',
    })
  }</time
>
