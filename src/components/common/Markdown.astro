---
import { mdToHtmlString } from 'src/utilities/markdown';

type Props = {
  linkTarget?: string;
  class?: string;
  text: string;
};
const { linkTarget, class: className, text } = Astro.props;

const Container = className ? 'div' : Fragment;
const html = mdToHtmlString.processSync(text);
---

<Container class={className} set:html={html} />
